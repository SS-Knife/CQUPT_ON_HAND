<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/weekName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EEF6FD"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="49dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="月份"
                        android:id="@+id/month"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周一"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/mon_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周二"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tus_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周三"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/wedn_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周四"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/thur_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周五"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/fri_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周六"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/sat_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="49dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="10dp"
                        android:text="周日"
                        android:textColor="@color/app_blue"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/sun_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="00日"
                        android:textColor="@color/app_grey"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:background="#EEF6FD"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/app_blue"
                        android:textSize="13dp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

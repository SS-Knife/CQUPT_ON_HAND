<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:background="@mipmap/bg_me_top"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="169dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="我的"/>
            <com.example.cqupt_on_hand.Mess.CircleImageView
                android:layout_width="69dp"
                android:layout_height="68dp"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/avatar"
                android:background="@mipmap/default_avatar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="请填写用户名"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="85dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写下你对世界想说的话，就现在"
                android:textSize="13sp"
                android:id="@+id/saying"
                android:textColor="@color/white"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="110dp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_toRightOf="@id/saying"
                android:background="@mipmap/ic_me_edit"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="110dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="346dp"
                    android:layout_height="56dp"
                    android:layout_below="@+id/saying"
                    android:id="@+id/qiandao"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    card_view:cardCornerRadius="9dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="17dp"
                        android:background="@mipmap/ic_me_sign"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日签到"
                        android:paddingLeft="58dp"
                        android:layout_marginTop="20dp"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="126dp"
                        android:id="@+id/reddot1"
                        android:background="@mipmap/ic_me_remind_icon"/>
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="318dp"
                        android:background="@mipmap/ic_me_arrow"/>

                </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="346dp"
                android:layout_height="56dp"
                android:layout_below="@+id/qiandao"
                android:id="@+id/jifen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                card_view:cardCornerRadius="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/ic_me_store"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分商城"
                    android:paddingLeft="58dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/reddot2"
                    android:background="@mipmap/ic_me_remind_icon"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="318dp"
                    android:background="@mipmap/ic_me_arrow"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="346dp"
                android:layout_height="56dp"
                android:layout_below="@+id/jifen"
                android:id="@+id/wenyiwen"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                card_view:cardCornerRadius="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/ic_me_question"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问一问"
                    android:paddingLeft="58dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/reddot3"
                    android:background="@mipmap/ic_me_remind_icon"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="318dp"
                    android:background="@mipmap/ic_me_arrow"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="346dp"
                android:layout_height="56dp"
                android:layout_below="@+id/wenyiwen"
                android:id="@+id/bangyibang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                card_view:cardCornerRadius="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/ic_me_help"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮一帮"
                    android:paddingLeft="58dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/reddot4"
                    android:background="@mipmap/ic_me_remind_icon"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="318dp"
                    android:background="@mipmap/ic_me_arrow"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="346dp"
                android:layout_height="56dp"
                android:layout_below="@+id/bangyibang"
                android:id="@+id/caogaoxiang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                card_view:cardCornerRadius="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/ic_me_draft"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="草稿箱"
                    android:paddingLeft="58dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/reddot5"
                    android:background="@mipmap/ic_me_remind_icon"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="318dp"
                    android:background="@mipmap/ic_me_arrow"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="346dp"
                android:layout_height="56dp"
                android:layout_below="@+id/caogaoxiang"
                android:id="@+id/xiangguan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                card_view:cardCornerRadius="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/ic_me_relate_me"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="与我相关"
                    android:paddingLeft="58dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/reddot6"
                    android:background="@mipmap/ic_me_remind_icon"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="318dp"
                    android:background="@mipmap/ic_me_arrow"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="346dp"
                android:layout_height="56dp"
                android:layout_below="@+id/xiangguan"
                android:id="@+id/setting"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                card_view:cardCornerRadius="9dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="17dp"
                    android:background="@mipmap/ic_me_setting"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:paddingLeft="58dp"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="126dp"
                    android:id="@+id/reddot7"
                    android:background="@mipmap/ic_me_remind_icon"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="318dp"
                    android:background="@mipmap/ic_me_arrow"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_above="@+id/card_view"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">
        <RadioGroup
            android:paddingTop="5dp"
            android:id="@+id/tab_bar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/tab_Timetable"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/timetable_drawableselector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/textcolorselector"
                android:text="课表"/>
            <RadioButton
                android:id="@+id/tab_YouAsk"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/youask_drawableselector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/textcolorselector"
                android:text="邮问" />
            <RadioButton
                android:id="@+id/tab_Explor"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/explor_drawableselector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/textcolorselector"
                android:text="发现"
                />
            <RadioButton
                android:id="@+id/tab_Personal"
                android:gravity="center"
                android:button="@null"
                android:drawableTop="@drawable/personal_drawableselector"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@drawable/textcolorselector"
                android:text="我的"
                />
        </RadioGroup>
    </android.support.v7.widget.CardView>


</RelativeLayout>